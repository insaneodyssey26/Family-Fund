{
  "name": "family-fund",
  "version": "1.0.0",
  "description": "A family financial planning platform",
  "type": "module",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/backend/server.js",
    "dev:frontend": "vite",
    "dev:backend": "cross-env TS_NODE_PROJECT=tsconfig.server.json nodemon --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/backend/server.ts",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "tsc -p tsconfig.server.json && vite build",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "@types/pg": "^8.11.13",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "uuid": "^9.0.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.30",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.1.4"
  }
}
